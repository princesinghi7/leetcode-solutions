class Solution {
public:
    long long minimumCost(vector<int>& nums, int k, int dist) {
        int n = nums.size();
        long long ans = LLONG_MAX;

        multiset<int> small, large;
        long long sumSmall = 0;

        auto add = [&](int x) {
            small.insert(x);
            sumSmall += x;

            if (small.size() > k - 1) {
                auto it = prev(small.end());
                sumSmall -= *it;
                large.insert(*it);
                small.erase(it);
            }
        };

        auto remove = [&](int x) {
            if (small.find(x) != small.end()) {
                small.erase(small.find(x));
                sumSmall -= x;
                if (!large.empty()) {
                    auto it = large.begin();
                    sumSmall += *it;
                    small.insert(*it);
                    large.erase(it);
                }
            } else {
                large.erase(large.find(x));
            }
        };

        // initial window
        for (int i = 1; i <= dist + 1 && i < n; ++i)
            add(nums[i]);

        ans = sumSmall;

        for (int r = dist + 2; r < n; ++r) {
            add(nums[r]);
            remove(nums[r - dist - 1]);
            ans = min(ans, sumSmall);
        }

        return ans + nums[0];
    }
};
