class Solution {
public:
    int divide(int dividend, int divisor) {
        if(dividend == INT_MIN && divisor == -1) return INT_MAX;
        long long a = llabs(dividend);
        long long b = llabs(divisor);
        long long res = 0;
        while(a >= b) {
            long long temp = b, cnt = 1;
            while((temp << 1) <= a) {
                temp <<= 1;
                cnt <<= 1;
            }
            a -= temp;
            res += cnt;
        }
        if((dividend < 0) ^ (divisor < 0)) res = -res;
        return res;
    }
};
