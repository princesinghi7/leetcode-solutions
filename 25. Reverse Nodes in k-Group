class Solution {
public:
    ListNode* reverseKGroup(ListNode* head, int k) {
        ListNode* cur = head;
        int cnt = 0;
        while(cur && cnt < k) {
            cur = cur->next;
            cnt++;
        }
        if(cnt < k) return head;
        
        ListNode* prev = nullptr;
        cur = head;
        for(int i = 0; i < k; i++) {
            ListNode* nxt = cur->next;
            cur->next = prev;
            prev = cur;
            cur = nxt;
        }
        
        head->next = reverseKGroup(cur, k);
        return prev;
    }
};
