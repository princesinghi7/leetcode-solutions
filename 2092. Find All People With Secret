class Solution {
public:
    vector<int> findAllPeople(int n, vector<vector<int>>& meetings, int firstPerson) {
        vector<bool> knows(n, false);
        knows[0] = knows[firstPerson] = true;

        sort(meetings.begin(), meetings.end(), [](auto &a, auto &b) {
            return a[2] < b[2];
        });

        int m = meetings.size();
        for (int i = 0; i < m; ) {
            int t = meetings[i][2];
            unordered_map<int, vector<int>> g;
            vector<int> people;

            int j = i;
            while (j < m && meetings[j][2] == t) {
                int x = meetings[j][0], y = meetings[j][1];
                g[x].push_back(y);
                g[y].push_back(x);
                people.push_back(x);
                people.push_back(y);
                j++;
            }

            unordered_set<int> visited;
            for (int p : people) {
                if (visited.count(p)) continue;
                queue<int> q;
                vector<int> comp;
                bool has = false;

                q.push(p);
                visited.insert(p);

                while (!q.empty()) {
                    int u = q.front(); q.pop();
                    comp.push_back(u);
                    if (knows[u]) has = true;
                    for (int v : g[u]) {
                        if (!visited.count(v)) {
                            visited.insert(v);
                            q.push(v);
                        }
                    }
                }

                if (has) {
                    for (int x : comp) knows[x] = true;
                }
            }

            i = j;
        }

        vector<int> ans;
        for (int i = 0; i < n; i++) {
            if (knows[i]) ans.push_back(i);
        }
        return ans;
    }
};
