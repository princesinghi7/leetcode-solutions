class Solution {
public:
    int largestMagicSquare(vector<vector<int>>& grid) {
        int m = grid.size(), n = grid[0].size();
        vector<vector<long long>> row(m, vector<long long>(n + 1, 0));
        vector<vector<long long>> col(m + 1, vector<long long>(n, 0));
        vector<vector<long long>> diag1(m + 1, vector<long long>(n + 1, 0));
        vector<vector<long long>> diag2(m + 1, vector<long long>(n + 1, 0));

        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                row[i][j + 1] = row[i][j] + grid[i][j];
                col[i + 1][j] = col[i][j] + grid[i][j];
                diag1[i + 1][j + 1] = diag1[i][j] + grid[i][j];
                diag2[i + 1][j] = diag2[i][j + 1] + grid[i][j];
            }
        }

        int ans = 1;
        for (int k = 2; k <= min(m, n); k++) {
            for (int i = 0; i + k <= m; i++) {
                for (int j = 0; j + k <= n; j++) {
                    long long sum = row[i][j + k] - row[i][j];
                    bool ok = true;

                    for (int r = i; r < i + k && ok; r++)
                        if (row[r][j + k] - row[r][j] != sum) ok = false;

                    for (int c = j; c < j + k && ok; c++)
                        if (col[i + k][c] - col[i][c] != sum) ok = false;

                    if (diag1[i + k][j + k] - diag1[i][j] != sum) ok = false;
                    if (diag2[i + k][j] - diag2[i][j + k] != sum) ok = false;

                    if (ok) ans = k;
                }
            }
        }
        return ans;
    }
};
