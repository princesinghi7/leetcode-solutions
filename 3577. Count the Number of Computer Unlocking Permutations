class Solution {
public:
    static const int MOD = 1000000007;
    int countPermutations(vector<int>& complexity) {
        int n = complexity.size();
        for (int i = 1; i < n; ++i)
            if (complexity[i] <= complexity[0]) return 0;
        long long ans = 1;
        for (int i = 1; i <= n - 1; ++i) ans = ans * i % MOD;
        return (int)ans;
    }
};
