class Solution {
public:
    int dr[4] = {1,-1,0,0};
    int dc[4] = {0,0,1,-1};

    bool canCross(int day, int row, int col, vector<vector<int>>& cells) {
        vector<vector<int>> grid(row, vector<int>(col, 0));
        for(int i = 0; i < day; i++) {
            grid[cells[i][0]-1][cells[i][1]-1] = 1;
        }

        queue<pair<int,int>> q;
        vector<vector<int>> vis(row, vector<int>(col, 0));

        for(int c = 0; c < col; c++) {
            if(grid[0][c] == 0) {
                q.push({0,c});
                vis[0][c] = 1;
            }
        }

        while(!q.empty()) {
            auto [r,c] = q.front();
            q.pop();
            if(r == row-1) return true;

            for(int k = 0; k < 4; k++) {
                int nr = r + dr[k];
                int nc = c + dc[k];
                if(nr>=0 && nc>=0 && nr<row && nc<col && !vis[nr][nc] && grid[nr][nc]==0) {
                    vis[nr][nc] = 1;
                    q.push({nr,nc});
                }
            }
        }
        return false;
    }

    int latestDayToCross(int row, int col, vector<vector<int>>& cells) {
        int l = 1, r = cells.size(), ans = 0;
        while(l <= r) {
            int mid = (l+r)/2;
            if(canCross(mid, row, col, cells)) {
                ans = mid;
                l = mid + 1;
            } else {
                r = mid - 1;
            }
        }
        return ans;
    }
};
