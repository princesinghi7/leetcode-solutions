class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        vector<int> ans(nums.size());

        for (int i = 0; i < nums.size(); i++) {
            int num = nums[i];

            if ((num & 1) == 0) {
                ans[i] = -1;
                continue;
            }

            int t = 0;
            int temp = num;
            while (temp & 1) {
                t++;
                temp >>= 1;
            }

            ans[i] = num - (1 << (t - 1));
        }

        return ans;
    }
};
