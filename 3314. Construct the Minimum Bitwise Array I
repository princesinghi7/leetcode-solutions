class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        vector<int> ans;
        for (int num : nums) {
            if ((num & 1) == 0) {
                ans.push_back(-1);
                continue;
            }

            int t = 0;
            int temp = num;
            while (temp & 1) {
                t++;
                temp >>= 1;
            }

            ans.push_back(num - (1 << (t - 1)));
        }
        return ans;
    }
};
