class Solution {
public:
    int bestClosingTime(string customers) {
        int n = customers.size();
        int penalty = 0;
        for(char c : customers)
            if(c == 'Y') penalty++;
        
        int ans = 0, best = penalty;
        
        for(int i = 0; i < n; i++) {
            if(customers[i] == 'Y') penalty--;
            else penalty++;
            
            if(penalty < best) {
                best = penalty;
                ans = i + 1;
            }
        }
        return ans;
    }
};
