class Solution {
public:
    int minDeletionSize(vector<string>& strs) {
        int n = strs.size();
        int m = strs[0].size();
        int count = 0;

        for (int c = 0; c < m; c++) {
            for (int r = 1; r < n; r++) {
                if (strs[r][c] < strs[r - 1][c]) {
                    count++;
                    break;
                }
            }
        }
        return count;
    }
};
