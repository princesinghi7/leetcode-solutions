class Solution {
public:
    bool hasAllCodes(string s, int k) {
        int n = s.size();
        if (n < k) return false;
        
        int total = 1 << k;   // 2^k
        vector<bool> seen(total, false);
        
        int mask = total - 1; // to keep last k bits
        int hash = 0;
        int count = 0;
        
        for (int i = 0; i < n; i++) {
            // shift left and add current bit
            hash = ((hash << 1) & mask) | (s[i] - '0');
            
            if (i >= k - 1 && !seen[hash]) {
                seen[hash] = true;
                count++;
                
                if (count == total)
                    return true;
            }
        }
        
        return false;
    }
};
