class Solution {
public:
    int numSteps(string s) {
        int steps = 0;
        
        while (s != "1") {
            if (s.back() == '0') {
                // even â†’ divide by 2
                s.pop_back();
            } else {
                // odd â†’ add 1
                int i = s.size() - 1;
                
                // propagate carry
                while (i >= 0 && s[i] == '1') {
                    s[i] = '0';
                    i--;
                }
                
                if (i < 0) {
                    // all bits were 1 (e.g., 111 -> 1000)
                    s = '1' + s;
                } else {
                    s[i] = '1';
                }
            }
            steps++;
        }
        
        return steps;
    }
};
